<!DOCTYPE html>
<html>
<head>
  <title>StuternDemo</title>
  <%= stylesheet_link_tag    'application.sass', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application.sass', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<%= render 'shared/navigation' %>

<div id="main-container" class="container">
      <div class="row">
        <div class="col-xs-12">
        	<% flash.each do |name, msg| -%>
        	<%= content_tag :div, msg, class: "alert alert-#{name}" %>
        	<% end -%>
        </div>
    </div>
    <div class="row">
    	<div class="col-xs-3">
          <h3>Stutern</h3>
        </div>									
        <div class="col-xs-9">
			<%= yield %>
      <a href="/pages/about">About</a>
      <a href="/pages/contact">Contact</a>
			<p>Copyright 2014</p>
        </div>
      </div>
    </div>

</body>
</html>
